# Provider Selection (Optional)
# If not set, auto-detection uses: gemini > openai > deepseek > anthropic
# GM_ACTIVE_PROVIDER=gemini

# ============================================================
# Logging
# ============================================================
# GM_LOG_LEVEL=INFO # DEBUG, VERBOSE, INFO, WARNING, ERROR

# ============================================================
# Gemini Configuration
# ============================================================
GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL=gemini-2.0-flash

# ============================================================
# OpenAI Configuration
# ============================================================
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o

# ============================================================
# DeepSeek Configuration (via OpenAI-compatible API)
# ============================================================
# Option 1: Use dedicated DeepSeek provider
# DEEPSEEK_API_KEY=your_deepseek_api_key_here
# DEEPSEEK_MODEL=deepseek-chat

# Option 2: Use OpenAI provider with DeepSeek endpoint
# GM_ACTIVE_PROVIDER=openai
# OPENAI_API_KEY=your_deepseek_api_key_here
# OPENAI_API_BASE=https://api.deepseek.com
# OPENAI_MODEL=deepseek-chat

# ============================================================
# Anthropic Configuration
# ============================================================
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ============================================================
# Security Policy
# ============================================================
GM_SECURITY_AUTO_APPROVE=false
GM_SECURITY_ALLOW_FS=true
GM_SECURITY_ALLOW_NET=true
GM_SECURITY_WORKSPACE_ROOT=.

# ============================================================
# HTTP API
# ============================================================
GM_HTTP_ENABLE=true
GM_HTTP_ADDR=:8080
GM_HTTP_API_KEY=change-me
