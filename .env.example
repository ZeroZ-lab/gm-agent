# General Configuration
GM_ACTIVE_PROVIDER=gemini # Options: gemini, openai

# Gemini Configuration
GM_GEMINI_API_KEY=your_gemini_api_key_here
GM_GEMINI_MODEL=gemini-2.0-flash
# GM_GEMINI_PROJECT_ID=your_google_cloud_project_id # Optional (Vertex AI)
# GM_GEMINI_LOCATION=us-central1                     # Optional (Vertex AI)

# OpenAI Configuration
GM_OPENAI_API_KEY=your_openai_api_key_here
GM_OPENAI_BASE_URL=https://api.openai.com/v1
GM_OPENAI_MODEL=gpt-4o

# Security Policy
GM_SECURITY_AUTO_APPROVE=false # Set to true to skip confirmation prompts
GM_SECURITY_ALLOW_FS=true      # Enable filesystem tools (read_file, run_shell)
GM_SECURITY_ALLOW_NET=true     # Enable network tools
GM_SECURITY_WORKSPACE_ROOT=.   # Restrict file operations to this path
